# Example GitHub Actions workflow for deploying AutoMail
# Rename to deploy.yml and configure your secrets

name: Deploy to Cloudflare Pages

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      deployments: write
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Deploy to Cloudflare Pages
        uses: cloudflare/pages-action@v1
        with:
          apiToken: ${{ secrets.CLOUDFLARE_API_TOKEN }}
          accountId: ${{ secrets.CLOUDFLARE_ACCOUNT_ID }}
          projectName: automail
          directory: functions
          # Optional: Add environment variables
          # gitHubToken: ${{ secrets.GITHUB_TOKEN }}

# Setup Instructions:
# 1. Go to Cloudflare Dashboard → My Profile → API Tokens
# 2. Create a token with "Cloudflare Pages - Edit" permission
# 3. Add to GitHub Secrets:
#    - CLOUDFLARE_API_TOKEN
#    - CLOUDFLARE_ACCOUNT_ID (found in Cloudflare Dashboard URL)
# 4. Set secrets via wrangler for production:
#    - ADMIN_TOKEN
#    - RESEND_API_KEY
#    - etc.

